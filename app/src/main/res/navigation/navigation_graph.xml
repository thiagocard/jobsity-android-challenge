<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@+id/shows">

    <fragment
        android:id="@+id/shows"
        android:name="com.jobsity.android.challenge.ui.shows.ShowsFragment"
        android:label="Shows"
        tools:layout="@layout/fragment_shows" />

    <fragment
        android:id="@+id/favorite_shows"
        android:name="com.jobsity.android.challenge.ui.favorite_shows.FavoriteShowsFragment"
        android:label="@string/favorite_shows"
        tools:layout="@layout/fragment_favorite_shows" />

    <fragment
        android:id="@+id/show_details"
        android:name="com.jobsity.android.challenge.ui.show_details.ShowDetailsFragment"
        tools:layout="@layout/fragment_show_details">
        <argument
            android:name="show_id"
            app:argType="integer" />
        <action
            android:id="@+id/action_show_details_to_episode_details"
            app:destination="@id/episode_details" />
    </fragment>
    <fragment
        android:id="@+id/shows_search"
        android:name="com.jobsity.android.challenge.ui.shows_search.ShowsSearchFragment"
        android:label="@string/search"
        tools:layout="@layout/fragment_shows_search" />
    <fragment
        android:id="@+id/episode_details"
        android:name="com.jobsity.android.challenge.ui.episode_details.EpisodeDetailsFragment"
        tools:layout="@layout/fragment_episode_details">
        <argument
            android:name="episode_id"
            app:argType="integer" />
    </fragment>
    <action
        android:id="@+id/action_global_show_details"
        app:destination="@id/show_details"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim" />
</navigation>